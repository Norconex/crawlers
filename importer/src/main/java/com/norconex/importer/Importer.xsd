<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- Elements/types reusable across the Importer module. -->

  <xs:include schemaLocation="/com/norconex/commons/lang/Lang.xsd"></xs:include>
  <xs:include schemaLocation="/com/norconex/commons/lang/text/TextMatcher.xsd"></xs:include>
  <!-- This one also includes Regex.xsd -->
  <xs:include schemaLocation="/com/norconex/commons/lang/text/RegexFieldValueExtractor.xsd"></xs:include>


  <xs:element name="restrictTo">
    <xs:complexType>
      <xs:all>
        <!-- minOccurs can be zero to mean "match all" -->
        <xs:element name="fieldMatcher" 
            type="TextMatcherType" minOccurs="0" maxOccurs="1" />
        <xs:element name="valueMatcher" 
            type="TextMatcherType" minOccurs="0" maxOccurs="1" />
      </xs:all>
    </xs:complexType>
  </xs:element>
  
  <xs:complexType name="VariablesType">
    <xs:all>
      <xs:element name="variable" type="VariableType" minOccurs="1" maxOccurs="unbounded"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="VariableType">
    <xs:simpleContent>
      <xs:extension base="nonEmptyString">
        <xs:attribute name="name" type="xs:string" use="required"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>  

  <xs:simpleType name="MetadataFileFormatType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="json"/>
      <xs:enumeration value="xml"/>
      <xs:enumeration value="properties"/>
    </xs:restriction>
  </xs:simpleType>  
  
</xs:schema>

