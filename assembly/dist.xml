<assembly 
  xmlns="http://maven.apache.org/ASSEMBLY/2.2.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0
      https://maven.apache.org/xsd/assembly-2.2.0.xsd">
<!--
  ABOUT THIS FILE:
  
  This is the Maven assembly directives used by all modules when packaged
  with the "maven-assembly-plugin".
  -->
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeSiteDirectory>false</includeSiteDirectory>
  <fileSets>

    <!-- 
      Copy assembly files from parent and this project, enforcing
      proper line ending.
      -->      
    <fileSet>
      <directory>${basedir}/src/main/assembly/</directory>
      <includes>
        <include>*/**.html</include>
        <include>*/**.txt</include>
        <include>*/**.java</include>
        <include>*/**.xml</include>
        <include>*/**.md</include>
      </includes>
      <outputDirectory>./</outputDirectory>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/assembly/</directory>
      <includes>
        <include>*/**</include>
      </includes>
      <excludes>
        <exclude>*/**.html</exclude>
        <exclude>*/**.txt</exclude>
        <exclude>*/**.java</exclude>
        <exclude>*/**.xml</exclude>
        <exclude>*/**.md</exclude>
      </excludes>
      <outputDirectory>./</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/assembly/resources/</directory>
      <includes>
        <include>*/**.html</include>
        <include>*/**.txt</include>
        <include>*/**.java</include>
        <include>*/**.xml</include>
        <include>*/**.md</include>
      </includes>
      <outputDirectory>./</outputDirectory>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/assembly/resources/</directory>
      <includes>
        <include>*/**</include>
      </includes>
      <excludes>
        <exclude>*/**.html</exclude>
        <exclude>*/**.txt</exclude>
        <exclude>*/**.java</exclude>
        <exclude>*/**.xml</exclude>
        <exclude>*/**.md</exclude>
      </excludes>
      <outputDirectory>./</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>${project.parent.basedir}</directory>
      <includes>
        <include>LICENSE.txt</include>
        <!--
        <include>CHANGES.xml</include>
        -->
      </includes>
      <outputDirectory>./</outputDirectory>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/apidocs</directory>
      <outputDirectory>./</outputDirectory>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/shared-resources</directory>
      <includes>
        <include>${shared-resources.include}</include>
      </includes>
      <excludes>
        <exclude>${shared-resources.exclude}</exclude>
      </excludes>
      <outputDirectory>./</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/generated-resources</directory>
      <outputDirectory>third-party</outputDirectory>
      <lineEnding>unix</lineEnding>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>