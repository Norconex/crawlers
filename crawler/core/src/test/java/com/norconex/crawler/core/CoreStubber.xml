<!-- A simple crawl session. -->
<crawlSession id="test-session">

  <clusterInquireInterval>250</clusterInquireInterval>
  <clusterInformInterval>500</clusterInformInterval>

  <crawlers>

    <crawler id="test-crawler">
      <numThreads>1</numThreads>
      <referenceFilters>
        <!-- Short name -->
        <filter class="ExtensionReferenceFilter">
          <extensions>html,htm,php,asp</extensions>
        </filter>
      </referenceFilters>
      <committers>
        <!-- Fully qualified name -->
        <committer class="com.norconex.committer.core.impl.MemoryCommitter"/>
      </committers>
    </crawler>

  </crawlers>
</crawlSession>