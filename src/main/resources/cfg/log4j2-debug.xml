<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration status="debug" name="Norconex HTTP Collector">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout>
        <pattern>%d{HH:mm:ss.SSS} [%t] %-5level %c{1} - %msg%n</pattern>
        <!-- Use the following pattern instead to enable highlighting
           - in generated logs.
           - 
           -     %d{HH:mm:ss.SSS} [%t] %highlight{%-5level %c{1} - %msg%n}
           -
           - Add -Dlog4j.skipJansi=false to your JVM properties for ANSI
           - highlighting on Windows.
           -->
      </PatternLayout>
    </Console>
  </Appenders>
  <Loggers>

    <!-- 
      NOTE: Most events are typically fired as debug, but setting the logger 
      levels here at DEBUG sometimes will log extra debugrmation.
      -->

    <!-- Overall crawler progress -->

    <Logger name="com.norconex.collector.core.crawler.CrawlProgressLogger" level="debug" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>

    <!-- Events Types -->

    <Logger name="CollectorEvent" level="debug" additivity="false">
