<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:include schemaLocation="/com/norconex/commons/lang/net/ProxySettings.xsd" />

  <xs:complexType name="HttpSnifferConfigType">
    <xs:all>
      <xs:element name="port" type="xs:int" minOccurs="0" maxOccurs="1"/>
      <xs:element name="host" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <xs:element name="userAgent" type="xs:string" minOccurs="0" maxOccurs="1"/>
      <xs:element name="maxBufferSize" type="xs:int" minOccurs="0" maxOccurs="1"/>
      <xs:element name="responseTimeout"  type="xs:string" minOccurs="0" maxOccurs="1"/>
      <xs:element name="headers" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:all>
            <xs:element name="header" minOccurs="0" maxOccurs="unbounded">
              <xs:complexType>
                <xs:simpleContent>
                  <xs:extension base="xs:string">
                    <xs:attribute name="name" type="xs:string" use="required" />
                  </xs:extension>
                </xs:simpleContent>
              </xs:complexType>
            </xs:element>
          </xs:all>
        </xs:complexType>
      </xs:element>
      <xs:element name="chainedProxy" type="ProxySettingsType" minOccurs="0" maxOccurs="1"/>
    </xs:all>
    
    <xs:attribute name="class" type="xs:string" use="optional"/>
  </xs:complexType>

</xs:schema>
